<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@android:color/transparent"
    card_view:cardElevation="0dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/cardImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            card_view:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/castImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:scaleType="fitCenter"
                android:textAlignment="center"
                android:contentDescription="@string/txt_film_author" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/castName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:textColor="@color/blue_dark_5"
            android:textSize="@dimen/detail_text_size"
            android:layout_weight="1"
            tools:text="Keaunu Reaves" />

        <TextView
            android:id="@+id/castPaperName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:textColor="@color/blue_dark_5"
            android:textSize="@dimen/detail_text_size"
            android:layout_weight="2"
            tools:text="John Wick"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>